# Environment configuration for Construction AI Platform
# Rename this file to .env and update the values before deployment

# Application settings
PROJECT_NAME="Construction AI Platform"
API_V1_STR="/api/v1"
SECRET_KEY="your-secure-secret-key-here-change-this-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# CORS settings (comma-separated list of origins)
BACKEND_CORS_ORIGINS="http://localhost,http://localhost:3000,http://localhost:8080,https://yourdomain.com"

# Database settings
MYSQL_SERVER="localhost"
MYSQL_USER="your_mysql_username"
MYSQL_PASSWORD="your_mysql_password"
MYSQL_DB="construction_ai"
MYSQL_PORT="3306"

# File storage settings
UPLOAD_FOLDER="/path/to/uploads"
MAX_CONTENT_LENGTH=16777216  # 16 MB

# AI model settings
MODEL_PATH="./models"

# HostGator specific settings
HOSTGATOR_PYTHON_PATH="/home/username/virtualenv/bin/python"
HOSTGATOR_PUBLIC_HTML="/home/username/public_html"

# Logging settings
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
